    <!-- Firebase SDK Logic -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, doc, setDoc, deleteDoc, onSnapshot } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // CONFIGURAÇÃO DO FIREBASE
        const firebaseConfig = {
            apiKey: "AIzaSyCUG2O3BXWBbaBH4CFLRq4HTk431kdWVp0",
            authDomain: "fiscal-23151.firebaseapp.com",
            databaseURL: "https://fiscal-23151-default-rtdb.firebaseio.com",
            projectId: "fiscal-23151",
            storageBucket: "fiscal-23151.firebasestorage.app",
            messagingSenderId: "852461389941",
            appId: "1:852461389941:web:c535d25266062f17fa103c",
            measurementId: "G-9BJ7HRGQR2"
        };

        const appId = typeof __app_id !== 'undefined' ? __app_id : 'sugat-territorial-cloud';
        let db, auth, mainChart;
        
        // --- ESTADO GLOBAL ---
        window.units = [];
        window.filteredUnits = [];
        window.currentProjectionsEdit = {};
        window.currentView = 'dashboard';
        window.chartMode = 'annual';
        window.chartYear = 2026;
        window.formStep = 1;
        window.modalEditingYear = 2026;
        window.editingId = null;
        window.selectedUnit = null;
        window.currentUser = null;
        window.isFirebaseInit = false;

        const YEARS = [2025, 2026, 2027, 2028, 2029, 2030];
        const MONTHS = ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'];
        const CURRENT_YEAR = 2026;
        const CURRENT_MONTH_IDX = 0;

        const MAPPING = {
            "032/2013": "PROSUL PROJETOS SUPERVISAO E PLANEJAMENTO",
            "016/2015": "M R S ESTUDOS AMBIENTAIS", "017/2015": "M R S ESTUDOS AMBIENTAIS",
            "011/2018": "Consórcio Egis-Engemim", "014/2021": "FUNDACAO AROEIRA", "016/2021": "SKILL ENGENHARIA",
            "017/2021": "PROSUL PROJETOS", "025/2021": "Consórcio HE Espeleológico", "012/2022": "HABILIS CONSULTORIA",
            "013/2022": "CONSORCIO ECOPLAN", "021/2024": "CONSORCIO INFRA GAT", "037/2024": "ENPROL ENGENHARIA",
            "006/2025": "M R S ESTUDOS AMBIENTAIS", "007/2025": "M R S ESTUDOS AMBIENTAIS",
            "010/2025": "ASTEC", "Inex 012/2025": "CORTEX AMERICAS", "017/2025": "FGV",
            "026/2025": "Consórcio ESPELCON-INFRA", "027/2025": "FUNDAÇÃO AROEIRA",
            "029/2025": "FIA", "TED 002/2025": "INPA"
        };

        // --- DEFINIÇÃO DAS FUNÇÕES DE INTERFACE ---

        function populateYearSelects() {
            const ds = document.getElementById('chart-year-select');
            if (ds) ds.innerHTML = YEARS.map(y => `<option value="${y}" ${y === window.chartYear ? 'selected' : ''}>${y}</option>`).join('');
            const ms = document.getElementById('form-modal-year-select');
            if (ms) ms.innerHTML = YEARS.map(y => `<option value="${y}" ${y === window.modalEditingYear ? 'selected' : ''}>Ano ${y}</option>`).join('');
        }

        function resetTempProjections() {
            window.currentProjectionsEdit = YEARS.reduce((acc, y) => { acc[y] = Array(12).fill(0); return acc; }, {});
        }

        // Atribuição ao window
        window.populateYearSelects = populateYearSelects;
        window.resetTempProjections = resetTempProjections;

        window.formatBRL = (v) => v.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL', maximumFractionDigits: 0 });
        window.formatBRLTable = (v) => v.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL', minimumFractionDigits: 2 });
        
        window.maskCurrency = (v) => {
            if (!v && v !== 0) return "0,00";
            let clean = v.toString().replace(/\D/g, "");
            let num = parseInt(clean) || 0;
            clean = num.toString().padStart(3, "0");
            let intPart = clean.slice(0, -2);
            let decPart = clean.slice(-2);
            if (intPart.length > 1) intPart = parseInt(intPart).toString();
            intPart = intPart.replace(/\B(?=(\d{3})+(?!\d))/g, ".");
            return `${intPart},${decPart}`;
        };

        window.parseCurrency = (v) => {
            if (!v) return 0;
            let clean = v.toString().replace(/\./g, "").replace(",", ".");
            return parseFloat(clean) || 0;
        };

        window.handleCurrencyInput = (i) => {
            let pos = i.selectionStart, oldLen = i.value.length;
            i.value = window.maskCurrency(i.value);
            i.setSelectionRange(pos + (i.value.length - oldLen), pos + (i.value.length - oldLen));
        };

        window.handleMonthInput = (idx, i) => {
            window.handleCurrencyInput(i);
            window.currentProjectionsEdit[window.modalEditingYear][idx] = window.parseCurrency(i.value);
        };

        window.handleInstrumentChange = (v) => { document.getElementById('form-cat').value = MAPPING[v] || ""; };

        window.navigateTo = (v) => {
            window.currentView = v;
            document.querySelectorAll('[id^="view-"]').forEach(el => el.classList.add('hidden'));
            const target = document.getElementById(`view-${v}`);
            if (target) target.classList.remove('hidden');
            
            document.getElementById('nav-dashboard').classList.toggle('bg-indigo-600', v === 'dashboard');
            document.getElementById('nav-dashboard').classList.toggle('text-white', v === 'dashboard');
            document.getElementById('nav-units').classList.toggle('bg-indigo-600', v === 'units');
            document.getElementById('nav-units').classList.toggle('text-white', v === 'units');
            
            document.getElementById('back-btn').classList.toggle('hidden', v !== 'detail');
            document.getElementById('header-title').innerText = v === 'dashboard' ? 'PAINEL DE CONTROLO SUGAT' : (v === 'units' ? 'INSTRUMENTOS ADMINISTRATIVOS' : 'FICHA DETALHADA');
            
            if(v === 'dashboard') window.renderDashboard();
            if(v === 'units') window.renderList();
            lucide.createIcons();
        };

        window.renderDashboard = () => {
            let total = 0, debited = 0;
            window.units.forEach(u => {
                YEARS.forEach(y => {
                    const yr = u.projections[y] || Array(12).fill(0);
                    total += yr.reduce((a,b)=>a+b,0);
                    if(y < CURRENT_YEAR) debited += yr.reduce((a,b)=>a+b,0);
                    else if(y === CURRENT_YEAR) { for(let i=0; i<CURRENT_MONTH_IDX; i++) debited += yr[i]; }
                });
            });
            const uniqCount = new Set(window.units.map(u => u.nome)).size;
            const grid = document.getElementById('metrics-grid');
            if (grid) grid.innerHTML = `
                <div class="kpi-card"><div class="p-3 rounded-2xl bg-slate-900 text-white w-max mb-4 shadow-lg"><i data-lucide="dollar-sign"></i></div><p class="text-slate-400 text-xs font-bold uppercase tracking-widest">Budget Plurianual</p><p class="text-2xl font-black text-slate-900 mt-1">${window.formatBRL(total)}</p></div>
                <div class="kpi-card border-rose-100 bg-rose-50/30"><div class="p-3 rounded-2xl bg-rose-600 text-white w-max mb-4 shadow-lg"><i data-lucide="arrow-down-to-dot"></i></div><p class="text-rose-600 text-xs font-bold uppercase tracking-widest">Total Debitado</p><p class="text-2xl font-black text-rose-900 mt-1">${window.formatBRL(debited)}</p></div>
                <div class="kpi-card border-emerald-100 bg-emerald-50/30"><div class="p-3 rounded-2xl bg-emerald-600 text-white w-max mb-4 shadow-lg"><i data-lucide="landmark"></i></div><p class="text-emerald-600 text-xs font-bold uppercase tracking-widest">Saldo Restante</p><p class="text-2xl font-black text-emerald-900 mt-1">${window.formatBRL(total - debited)}</p></div>
                <div class="kpi-card"><div class="p-3 rounded-2xl bg-indigo-600 text-white w-max mb-4 shadow-lg"><i data-lucide="briefcase"></i></div><p class="text-slate-400 text-xs font-bold uppercase tracking-widest">Instrumentos Únicos</p><p class="text-2xl font-black text-slate-900 mt-1">${uniqCount}</p></div>
            `;
            window.renderChart();
            lucide.createIcons();
        };

        window.renderChart = () => {
            const canvas = document.getElementById('mainChart');
            if(!canvas) return;
            const ctx = canvas.getContext('2d');
            let labels, dataPoints;
            if (window.chartMode === 'annual') {
                labels = YEARS;
                dataPoints = YEARS.map(y => window.units.reduce((acc, u) => acc + (u.projections[y] || Array(12).fill(0)).reduce((s, m) => s + m, 0), 0));
            } else {
                labels = MONTHS;
                dataPoints = Array(12).fill(0).map((_, i) => window.units.reduce((acc, u) => acc + (u.projections[window.chartYear] ? u.projections[window.chartYear][i] : 0), 0));
            }
            if(mainChart) mainChart.destroy();
            mainChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'BRL',
                        data: dataPoints,
                        backgroundColor: dataPoints.map((_, i) => (window.chartMode === 'annual' ? YEARS[i] < CURRENT_YEAR : (window.chartYear < CURRENT_YEAR || (window.chartYear === CURRENT_YEAR && i < CURRENT_MONTH_IDX))) ? '#cbd5e1' : '#4f46e5'),
                        borderRadius: 12
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true, grid: { color: '#f1f5f9' }, ticks: { callback: (v) => window.formatBRL(v) } }, x: { grid: { display: false } } }
                }
            });
        };

        window.renderList = () => {
            const tbody = document.getElementById('units-table-body');
            const empty = document.getElementById('units-empty-state');
            if (empty) empty.classList.toggle('hidden', window.units.length > 0);
            if (!tbody) return;
            tbody.innerHTML = window.filteredUnits.map(u => {
                let total = 0, debited = 0;
                YEARS.forEach(y => {
                    const yr = u.projections[y] || Array(12).fill(0);
                    total += yr.reduce((a,b)=>a+b,0);
                    if(y < CURRENT_YEAR) debited += yr.reduce((a,b)=>a+b,0);
                    else if(y === CURRENT_YEAR) { for(let i=0; i<CURRENT_MONTH_IDX; i++) debited += yr[i]; }
                });
                return `<tr class="group hover:bg-slate-50 transition-all cursor-pointer">
                    <td onclick="window.showDetail('${u.id}')" class="px-10 py-6"><p class="text-sm font-black text-slate-900 uppercase tracking-tight">${u.nome}</p><p class="text-[10px] text-slate-400 font-bold uppercase">${u.categoria}</p></td>
                    <td onclick="window.showDetail('${u.id}')" class="px-6 py-6 text-center"><span class="px-3 py-1 rounded-full text-[9px] font-black uppercase border bg-emerald-50 text-emerald-700 border-emerald-100">${u.status}</span></td>
                    <td onclick="window.showDetail('${u.id}')" class="px-6 py-6 text-right font-black text-rose-500">${window.formatBRL(debited)}</td>
                    <td onclick="window.showDetail('${u.id}')" class="px-6 py-6 text-right font-black text-indigo-600">${window.formatBRL(total)}</td>
                    <td class="px-10 py-6 text-center"><div class="flex items-center justify-center gap-2">
                        <button onclick="window.openModal('${u.id}')" class="p-2 bg-slate-100 text-slate-400 hover:bg-indigo-600 hover:text-white rounded-xl transition-all shadow-sm"><i data-lucide="edit-3" size="16"></i></button>
                        <button onclick="window.deleteUnit('${u.id}')" class="p-2 bg-slate-100 text-slate-400 hover:bg-rose-600 hover:text-white rounded-xl transition-all shadow-sm"><i data-lucide="trash-2" size="16"></i></button>
                    </div></td></tr>`;
            }).join('');
            lucide.createIcons();
        };

        window.showDetail = (id) => {
            window.selectedUnit = window.units.find(u => u.id === id);
            window.navigateTo('detail');
            const view = document.getElementById('view-detail');
            if(!view) return;
            let total = 0, debited = 0;
            YEARS.forEach(y => {
                const yr = window.selectedUnit.projections[y] || Array(12).fill(0);
                total += yr.reduce((a,b)=>a+b,0);
                if(y < CURRENT_YEAR) debited += yr.reduce((a,b)=>a+b,0);
                else if(y === CURRENT_YEAR) { for(let i=0; i<CURRENT_MONTH_IDX; i++) debited += yr[i]; }
            });
            let tableRows = YEARS.map(year => {
                const yr = window.selectedUnit.projections[year] || Array(12).fill(0);
                let cells = yr.map((m, idx) => `<td class="text-right text-xs font-medium px-4 py-3 border-r ${ (year < CURRENT_YEAR || (year === CURRENT_YEAR && idx < CURRENT_MONTH_IDX)) ? 'debited-month' : 'text-slate-600'}">${window.formatBRLTable(m)}</td>`).join('');
                return `<tr class="hover:bg-slate-50 border-b"><td class="sticky left-0 bg-white z-10 px-6 py-4 font-black text-slate-800 border-r">${year}</td>${cells}<td class="text-right px-6 py-4 font-black text-indigo-600 bg-indigo-50/30">${window.formatBRL(yr.reduce((a,b)=>a+b,0))}</td></tr>`;
            }).join('');
            view.innerHTML = `
                <div class="bg-white rounded-[48px] border border-slate-200 shadow-2xl overflow-hidden mb-8 fade-in">
                    <div class="bg-slate-900 p-12 text-white relative text-left">
                        <div class="flex flex-col md:flex-row justify-between items-end gap-8 relative z-10">
                            <div class="flex-1 w-full">
                                <div class="flex gap-2 mb-4"><span class="px-4 py-1.5 rounded-full text-[10px] font-black uppercase bg-emerald-500 text-white">${window.selectedUnit.status}</span>
                                <button onclick="window.openModal('${window.selectedUnit.id}')" class="flex items-center gap-2 px-4 py-1.5 bg-white/10 hover:bg-white/20 border border-white/10 rounded-full text-[10px] font-bold uppercase transition-all ml-4"><i data-lucide="edit-3" size="14"></i> Editar Dados</button></div>
                                <h1 class="text-4xl font-black tracking-tighter uppercase mb-8">${window.selectedUnit.nome}</h1>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-4 text-slate-300">
                                    <div class="font-bold text-xs flex items-center gap-2 uppercase tracking-widest leading-none border-l-4 border-rose-500 pl-3 py-1">Total Debitado: <span class="text-white ml-2 font-black">${window.formatBRLTable(debited)}</span></div>
                                    <div class="font-bold text-xs flex items-center gap-2 uppercase tracking-widest leading-none border-l-4 border-emerald-500 pl-3 py-1">Saldo Restante: <span class="text-white ml-2 font-black">${window.formatBRLTable(total - debited)}</span></div>
                                </div>
                            </div>
                            <div class="bg-white/10 backdrop-blur-xl p-10 rounded-[32px] border border-white/10 text-right min-w-[280px]">
                                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Custeio Global SUGAT</p>
                                <p class="text-4xl font-black">${window.formatBRL(total)}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-[40px] border border-slate-200 shadow-sm overflow-hidden fade-in"><div class="overflow-x-auto custom-scrollbar"><table class="w-full text-left projection-table border-collapse"><thead class="bg-slate-50/80 text-[10px] uppercase font-black text-slate-400 tracking-widest border-b"><tr><th class="sticky left-0 bg-slate-50 z-20 px-6 py-4 border-r">Ano</th>${MONTHS.map(m => `<th class="px-4 py-4 text-right border-r">${m}</th>`).join('')}<th class="px-6 py-4 text-right bg-indigo-50/50">Total</th></tr></thead><tbody>${tableRows}</tbody></table></div></div>`;
            lucide.createIcons();
        };

        // --- PERSISTÊNCIA ---

        window.openModal = (id = null) => {
            const container = document.getElementById('modal-container');
            if (container) { container.classList.remove('hidden'); container.classList.add('flex'); }
            window.formStep = 1; window.editingId = id;
            if (id) {
                const u = window.units.find(u => u.id === id);
                if (u) {
                    document.getElementById('form-name').value = u.nome; document.getElementById('form-cat').value = u.categoria;
                    document.getElementById('form-status').value = u.status; document.getElementById('form-action').value = u.acaoOrcamentaria; 
                    document.getElementById('form-ddo').value = window.maskCurrency(u.ddo);
                    window.currentProjectionsEdit = JSON.parse(JSON.stringify(u.projections));
                }
            } else {
                document.getElementById('form-name').value = ''; document.getElementById('form-cat').value = '';
                document.getElementById('form-ddo').value = '0,00'; window.resetTempProjections();
            }
            window.updateModalView();
        };

        window.closeModal = () => { const el = document.getElementById('modal-container'); if (el) { el.classList.add('hidden'); el.classList.remove('flex'); } window.editingId = null; };

        window.updateModalView = () => {
            const s1 = document.getElementById('step-1'); const s2 = document.getElementById('step-2');
            const bk = document.getElementById('modal-back-btn'); const nx = document.getElementById('modal-next-btn');
            if(s1) s1.classList.toggle('hidden', window.formStep !== 1);
            if(s2) s2.classList.toggle('hidden', window.formStep !== 2);
            if(bk) bk.classList.toggle('hidden', window.formStep === 1);
            if(nx) nx.innerText = window.formStep === 1 ? 'Próxima Etapa' : 'Guardar Dados';
            if(window.formStep === 2) { window.populateYearSelects(); window.renderMonthlyInputs(); }
            lucide.createIcons();
        };

        window.modalNextStep = () => { if (window.formStep === 1) { window.formStep = 2; window.updateModalView(); } else { window.saveUnit(); } };
        window.modalPrevStep = () => { window.formStep = 1; window.updateModalView(); };

        window.renderMonthlyInputs = () => {
            const grid = document.getElementById('monthly-inputs-grid'); if(!grid) return;
            const data = window.currentProjectionsEdit[window.modalEditingYear] || Array(12).fill(0);
            grid.innerHTML = MONTHS.map((m, idx) => `
                <div class="space-y-2"><label class="text-[10px] font-black text-slate-400 uppercase tracking-wider">${m}</label>
                <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 font-bold text-xs">R$</span>
                <input type="text" oninput="window.handleMonthInput(${idx}, this)" class="w-full pl-9 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-xs font-black outline-none focus:ring-2 focus:ring-indigo-500" value="${window.maskCurrency(data[idx])}"></div></div>`).join('');
        };

        window.changeModalEditingYear = (y) => { window.modalEditingYear = parseInt(y); window.renderMonthlyInputs(); };

        window.saveUnit = async () => {
            const btn = document.getElementById('modal-next-btn');
            const originalText = btn.innerText;
            btn.innerText = "Sincronizando..."; btn.disabled = true;

            const data = {
                id: window.editingId || (Date.now().toString()),
                nome: document.getElementById('form-name').value, categoria: document.getElementById('form-cat').value,
                status: document.getElementById('form-status').value, acaoOrcamentaria: document.getElementById('form-action').value, 
                ddo: window.parseCurrency(document.getElementById('form-ddo').value),
                projections: window.currentProjectionsEdit, updatedAt: new Date().toISOString()
            };

            try {
                if (window.isFirebaseInit && window.currentUser) {
                    const docRef = doc(db, 'artifacts', appId, 'public', 'data', 'instruments', data.id);
                    await setDoc(docRef, data);
                } else {
                    const idx = window.units.findIndex(u => u.id === data.id);
                    if(idx >= 0) window.units[idx] = data; else window.units.push(data);
                    window.filteredUnits = [...window.units];
                    window.renderDashboard(); window.renderList();
                }
                window.closeModal(); window.navigateTo('units');
            } catch (err) { console.error("Save Error:", err); }
            finally { btn.innerText = originalText; btn.disabled = false; }
        };

        window.deleteUnit = async (id) => {
            if (!confirm("Eliminar permanentemente?")) return;
            try {
                if (window.isFirebaseInit && window.currentUser) {
                    await deleteDoc(doc(db, 'artifacts', appId, 'public', 'data', 'instruments', id));
                } else {
                    window.units = window.units.filter(u => u.id !== id);
                    window.filteredUnits = [...window.units];
                    window.renderDashboard(); window.renderList();
                }
            } catch (err) { console.error("Delete Error:", err); }
        };

        window.setChartMode = (m) => { window.chartMode = m; window.renderChart(); };
        window.updateChartYear = (y) => { window.chartYear = parseInt(y); window.renderChart(); };
        window.handleSearch = (t) => { 
            window.filteredUnits = window.units.filter(u => (u.nome && u.nome.toLowerCase().includes(t.toLowerCase())) || (u.categoria && u.categoria.toLowerCase().includes(t.toLowerCase()))); 
            window.renderList(); 
        };
        window.goBack = () => window.navigateTo('units');

        window.syncWithDatabase = () => {
            if (!window.currentUser) return;
            const collectionRef = collection(db, 'artifacts', appId, 'public', 'data', 'instruments');
            return onSnapshot(collectionRef, (snapshot) => {
                window.units = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
                window.filteredUnits = [...window.units];
                
                const overlay = document.getElementById('loading-overlay');
                if (overlay) overlay.style.display = 'none';
                
                document.getElementById('connection-indicator').className = "w-2.5 h-2.5 rounded-full bg-emerald-500 animate-pulse";
                document.getElementById('connection-text').innerText = "Sincronizado";
                document.getElementById('sync-info').innerText = "Online (fiscal-23151)";

                window.renderDashboard();
                window.renderList();
            });
        };

        // --- INICIALIZAÇÃO ---
        const init = async () => {
            lucide.createIcons();
            window.populateYearSelects();
            window.resetTempProjections();

            const loaderTimeout = setTimeout(() => {
                const overlay = document.getElementById('loading-overlay');
                if (overlay && overlay.style.display !== 'none') {
                    overlay.style.display = 'none';
                    document.getElementById('connection-text').innerText = "Modo Local";
                    document.getElementById('connection-indicator').className = "w-2.5 h-2.5 rounded-full bg-amber-500";
                    window.renderDashboard();
                }
            }, 10000);

            if (window.isFirebaseInit) {
                try {
                    let userCredential;
                    if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                        try { userCredential = await signInWithCustomToken(auth, __initial_auth_token); } 
                        catch (e) { userCredential = await signInAnonymously(auth); }
                    } else { userCredential = await signInAnonymously(auth); }

                    onAuthStateChanged(auth, (user) => {
                        window.currentUser = user;
                        if (user) window.syncWithDatabase();
                    });
                } catch (e) { 
                    console.error("Auth Error", e); 
                    document.getElementById('loading-text').innerText = "Falha crítica de autenticação.";
                }
            }
        };

        window.onload = init;
    </script>
</body>
</html>
